{
  "name": "futebol-clubes",
  "version": "1.0.0",
  "description": "Sistema de visualização de clubes de futebol brasileiros",
  "scripts": {
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "server": "cd backend && npm start",
    "static": "npx http-server frontend -p 8080 -o",
    "deploy": "./scripts/deploy.sh",
    "sync": "mkdir -p frontend/data && cp backend/data/clubes.json frontend/data/clubes.json",
    "validate": "node -e \"JSON.parse(require('fs').readFileSync('backend/data/clubes.json')); console.log('✅ JSON válido')\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SEU_USUARIO/futebol-clubes.git"
  },
  "keywords": ["futebol", "clubes", "brasileirao", "api", "bootstrap"],
  "author": "Seu Nome",
  "license": "MIT"
}
