  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "server": "cd backend && npm start",
    "static": "npx http-server frontend -p 8080 -o",
    "deploy": "./scripts/deploy.sh",
    "sync": "mkdir -p backend/data && cp backend/data/clubes.json backend/data/clubes.json",
    "validate": "node -e \"JSON.parse(require('fs').readFileSync('backend/data/clubes.json')); console.log('✅ JSON válido')\""
  }
